@model UserLoginVM;

<h2>Login</h2>

<form asp-controller="Account" asp-action="Login" method="post">

    <div class="form-group">
        <label for="UserName">UserName:</label>
        <input type="text" class="form-control" id="UserName" name="UserName" asp-for="UserName" required>

    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required>
    </div>
    <br />
    <div>
        <label asp-for="UserType">User Type</label>
        <select asp-for="UserType" asp-items="Html.GetEnumSelectList<UserType>()"></select>
    </div>
    <br /><br />


    <button type="submit" class="btn btn-primary">Login</button>

    <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Register</a>



    </form>