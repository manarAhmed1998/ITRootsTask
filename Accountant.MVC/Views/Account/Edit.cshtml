@model UserEditVM;


<form asp-controller="Account" asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="FullName">Full Name:</label>
        <input type="text" class="form-control" id="FullName" name="FullName" asp-for="FullName" required>
        <span class="text-danger" asp-validation-for="FullName"></span>

    </div>

    <div class="form-group">
        <label for="UserName">UserName:</label>
        <input type="text" class="form-control" id="UserName" name="UserName" asp-for="UserName" required>
        <span class="text-danger" asp-validation-for="UserName"></span>

    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" required>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label for="Phone">Phone:</label>
        <input type="tel" class="form-control" id="Phone" name="Phone" asp-for="Phone" required>
        <span class="text-danger" asp-validation-for="Phone"></span>

    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
